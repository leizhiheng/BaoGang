<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10" >

        <CheckBox
            android:id="@+id/checkbox_selected"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/selector_checkbox_choose_contact"
            android:button="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_live_in_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="曾小亚"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="性别"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_live_in_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="男"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="手机号码"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_live_in_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="15315851526"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="证件号码"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_live_in_identity_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="452154484548485222"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_0.2"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/iv_live_in_edit"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/edit" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.2"
        android:layout_marginLeft="@dimen/dp_45"
        android:background="@color/gray" />

</LinearLayout>