<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_appraise_username"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="陈小明"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/mRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="2015-09-02 16:02:00"
            android:textColor="#9E9E9E"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_describ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="@dimen/dp_10"
        android:text="对于这次消费很满意，产品很好，而且服务人员态度也非常的不错，给5分哦！"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <com.baosteel.qcsh.ui.view.MyGridView
        android:id="@+id/gv_imgs"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <!--追加评价-->
    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="追加："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_time_add"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="2015-09-02 16:02:00"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_describ_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dp_5"
            android:text="手机是正品，很好用，样子也美观，瞬间有了高大上的感觉，手机运行很流畅，物流很给力，速度。电池耐用 通话质量好 后盖很漂亮 功能齐全 照相不错"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <com.baosteel.qcsh.ui.view.MyGridView
            android:id="@+id/gv_imgs_add"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>
