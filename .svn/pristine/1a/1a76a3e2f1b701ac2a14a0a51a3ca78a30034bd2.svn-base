<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.baosteel.qcsh.ui.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20" >

        <fragment
            android:id="@+id/fragment_linkList"
            android:name="com.baosteel.qcsh.ui.fragment.commen.ScrollLayoutFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            class="com.baosteel.qcsh.ui.fragment.commen.ScrollLayoutFragment" />
    </FrameLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:background="@drawable/ic_happyliving_banner_4"/>

</LinearLayout>