<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_remind_pre_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E5E2E4"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:text="您上次更换机油和滤清器大约在"
            android:textColor="#848385"
            android:textSize="@dimen/commen_text_size_12" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:background="#D3D3D3" />
        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="时间"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                android:gravity="center_vertical|right"
                android:text="2015年01月"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:src="@drawable/icon_arrow_right_gray"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="里程（km）"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                />
            <TextView
                android:id="@+id/tv_licheng"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/commen_text_size_14"
                android:gravity="center_vertical|right"
                android:text="10000"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:background="#D3D3D3" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E5E2E4"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:text="更换周期"
            android:textColor="#848385"
            android:textSize="@dimen/commen_text_size_12" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="时间（月）"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                />
            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                android:gravity="center_vertical|right"
                android:text="6"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="里程（km）"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                />
            <TextView
                android:id="@+id/tv_licheng_cycle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/commen_text_size_14"
                android:gravity="center_vertical|right"
                android:text="15000"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/tv_remind_will_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E5E2E4"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:text="测算出您更换机油和滤清器应该在"
            android:textColor="#848385"
            android:textSize="@dimen/commen_text_size_12" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="时间"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                />
            <TextView
                android:id="@+id/tv_about_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                android:gravity="center_vertical|right"
                android:text="2015年07月"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.1"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="里程（km）"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14"
                />
            <TextView
                android:id="@+id/tv_about_licheng"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/commen_text_size_14"
                android:gravity="center_vertical|right"
                android:text="25000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#E5E2E4"
            >

            <TextView
                android:id="@+id/btn_complete"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/common_radius_green"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/commen_text_size_16" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>