<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_is_check"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@drawable/address_selects" />

    <LinearLayout
        android:id="@+id/lin_edit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" >

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_5"
            android:src="@drawable/edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:id="@+id/v"
        android:layout_width="@dimen/dp_0.5"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toLeftOf="@id/lin_edit_info"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_address_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@id/v"
        android:layout_toRightOf="@+id/img_is_check"
        android:text="周杰伦"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_address_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@id/v"
        android:layout_toRightOf="@+id/tv_address_people"
        android:text="13465985487"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/v"
        android:layout_below="@+id/tv_address_people"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toLeftOf="@id/v"
        android:layout_toRightOf="@+id/img_is_check"
        android:text="收货地址：广东省深圳市宝安区西乡固戍航城大道东电光研发大厦二层"
        android:textColor="@color/grayfont"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>