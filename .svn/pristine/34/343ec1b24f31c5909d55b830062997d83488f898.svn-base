<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <com.baosteel.qcsh.ui.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/account_detail_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/receiverLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="常用收货人"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/right_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@drawable/com_black_arraw"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_1"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/userinfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="常用人员信息"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@drawable/com_black_arraw"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/dp_10"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_1"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/ticketLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="常用发票抬头"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/account_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@drawable/com_black_arraw"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_10"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_1"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/houseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="常用房屋信息"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@drawable/com_black_arraw"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_10"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_1"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/carLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="常用车辆信息"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@drawable/com_black_arraw"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_10"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>