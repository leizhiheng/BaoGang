<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_46"
    android:background="@color/index_red"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:scaleType="centerInside"
        android:padding="@dimen/dp_13"
        android:src="@drawable/ic_arrow_back" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/shape_corner_blue_4dp_frame"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="center"
            android:src="@drawable/ab_ic_search" />

        <EditText
            android:id="@+id/et_search_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入关键字搜索"
            android:textColor="@color/grayfont"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/selector_btn_red_corner"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

</LinearLayout>