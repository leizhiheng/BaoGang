<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_shopitem_check"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/common_blue_radius"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:text="满减"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_price_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="满300减100"
                android:textSize="@dimen/sp_13"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_5"
                android:src="@drawable/xiangxia"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_shopitem_check"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:src="@drawable/check_yes" />

            <ImageView
                android:id="@+id/img_shopitem"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/test_pic2" />

            <LinearLayout
                android:id="@+id/li2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_shopcar_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_40"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="车险好搭档 畅行无忧A款透明理赔更安心"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_spec"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:maxLines="3"
                    android:text="颜色分类:黑色"
                    android:textColor="@color/gr_l_color"
                    android:textSize="@dimen/sp_10" />

                <RelativeLayout
                    android:id="@+id/re2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10" >

                    <TextView
                        android:id="@+id/tv_shopcar_item_price"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:text="¥1129.00"
                        android:textColor="@color/orange_red"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:id="@+id/lin_1"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_28"
                        android:layout_toRightOf="@+id/tv_shopcar_item_price"
                        android:background="@drawable/common_price_select"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_cut_num"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_20" />

                        <View
                            android:layout_width="@dimen/dp_0.5"
                            android:layout_height="match_parent"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/tv_change_num"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="@dimen/dp_0.5"
                            android:layout_height="match_parent"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/tv_add_num"
                            android:layout_width="@dimen/dp_29"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_20" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_favorable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:text="[赠品]郎龙 汽车香水一瓶\n[赠品]水晶苹果汽车香水座\n[赠品]家用电源转换器"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <View
            android:id="@+id/v_item_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/line" />
    </LinearLayout>

</LinearLayout>