<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    android:orientation="vertical" >

    <com.baosteel.qcsh.ui.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.baosteel.qcsh.ui.view.TitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="2"
                android:padding="@dimen/dp_15"
                android:text="提示：物业费用信息，需您所在的物业公司维护本系统后方可查询。若无法查询物业信息，敬请谅解"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:background="@color/gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/gray" />

            <!-- 所在城市 -->

            <LinearLayout
                android:id="@+id/layout_choose_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_15"
                    android:text="所在城市"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="上海市宝山区"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/gray" />
            <!-- 所在小区 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_15"
                    android:text="所在小区"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="宝钢5村"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/gray" />
            <!-- 所在楼栋 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_15"
                    android:text="所在楼栋"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="B1栋"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/gray" />

            <!-- 所在房号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_15"
                    android:text="所在房号"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="505"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/gray" />
            <!-- 户主姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:text="户主姓名"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入真实姓名"
                    android:paddingLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15" />
            <!-- 身份证号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:text="身份证号"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入身份证号"
                    android:paddingLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="同意"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_15" >
                </CheckBox>

                <TextView
                    android:id="@+id/btn_payment_protol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:clickable="true"
                    android:text="《七彩生活自助缴费服务协议》"
                    android:textColor="@color/color_text_link"
                    android:textSize="@dimen/sp_15" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_next"
                style="@style/CommitBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="下一步" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>