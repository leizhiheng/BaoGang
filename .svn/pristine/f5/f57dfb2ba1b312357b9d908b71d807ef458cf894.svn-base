<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120" >

    <ImageView
        android:id="@+id/product_imageview"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@drawable/bg_list_youlun1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_toRightOf="@+id/product_imageview"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/product_name_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="日航航线-天海邮轮[新新世界]-京东+长椅5天4晚"
            android:textColor="#ff484848"
            android:textSize="@dimen/sp_14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="￥"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/product_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="2999"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="起/人"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_pay_count_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月销量：3568份"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#ffb6b6b6"/>

</RelativeLayout>