<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.baosteel.qcsh.ui.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.baosteel.qcsh.ui.view.TitleBar>

    <fragment
        android:id="@+id/fragment_banner"
        android:name="com.baosteel.qcsh.ui.fragment.commen.BannerFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        class="com.baosteel.qcsh.ui.fragment.commen.BannerFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_housing_estate_logo"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@drawable/ic_happyliving_house_estate_logo" />

        <TextView
            android:id="@+id/tv_housing_estate_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textColor="@color/color_text_black_blue"
            android:text="海公馆小区"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/icon_phone_black" />

        <TextView
            android:id="@+id/tv_housing_estate_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="13316955446"
            android:textColor="@color/color_text_black_blue"
            android:textSize="14sp" />
        
    </LinearLayout>
    
    <View android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:background="@drawable/shape_rect_fame_gray_light"/>

    <fragment
        android:id="@+id/fragment_linkList"
        android:name="com.baosteel.qcsh.ui.fragment.commen.ScrollLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.baosteel.qcsh.ui.fragment.commen.ScrollLayoutFragment" />
</LinearLayout>