        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.2"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/productCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:singleLine="true"
                android:text="共一件商品  实付："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="￥"
                android:textColor="@color/theme_color_order"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/totalPayTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_10"
                android:text="199.00"
                android:textColor="@color/theme_color_order"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.2"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10" >

            <TextView
                android:id="@+id/btn_gopay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="去付款"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_buy_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="再次购买"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_delete_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="删除订单"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_comment_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="晒单评价"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

             <TextView
                android:id="@+id/btn_refund_and_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="退货/换货"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
            <TextView
                android:id="@+id/btn_check_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="查看物流"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_confirm_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="确认收货"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_notice_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="提醒卖家"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/btn_contact_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="联系卖家"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/btn_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/selector_gray_corner_frame"
                android:clickable="true"
                android:padding="@dimen/dp_8"
                android:text="取消订单"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>