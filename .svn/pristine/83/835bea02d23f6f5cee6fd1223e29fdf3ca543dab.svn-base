<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/common_layout_carsafe_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_166" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="本次保养时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:id="@+id/tv_cur_time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:text="2015年01月"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12"
                    android:src="@drawable/icon_arrow_right_gray" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="本次保养里程（km）"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <EditText
                    android:id="@+id/ev_licheng"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    android:hint="请输入保养里程"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E5E2E4"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_5"
                android:text="保养配件"
                android:textColor="#848385"
                android:textSize="@dimen/commen_text_size_12" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="#D3D3D3" />

            <LinearLayout
                android:id="@+id/layout_selecte_from_order"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="从订单中选择"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:id="@+id/tv_archives"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12"
                    android:src="@drawable/icon_arrow_right_gray" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E5E2E4"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_5"
                android:text="手动添加"
                android:textColor="#848385"
                android:textSize="@dimen/commen_text_size_12" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="#D3D3D3" />

            <LinearLayout
                android:id="@+id/layout_maintain_type"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="所属保养项目"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:id="@+id/tv_maintain_type"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12"
                    android:src="@drawable/icon_arrow_right_gray" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="配件名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <EditText
                    android:id="@+id/ev_archives_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:hint="请输入配件名称"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="用量"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <EditText
                    android:id="@+id/ev_archives_num"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:hint="请输入配件用量"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.1"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <EditText
                    android:id="@+id/ev_more_info"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:hint="请输入备注信息"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_commit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/green_safetrip"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/commen_text_size_16" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>