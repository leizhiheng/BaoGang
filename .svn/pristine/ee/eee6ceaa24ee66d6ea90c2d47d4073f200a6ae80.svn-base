<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.common.view.topbar.HeadView
        android:id="@+id/headview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_46" />

    <com.common.view.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/scoroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f2f0f0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_banar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_121"
                android:scaleType="centerInside"
                android:src="@drawable/img_hb" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="#D3D3D3" />

            <com.common.view.listview.MyListView
                android:id="@+id/lv_juan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:dividerHeight="@dimen/dp_0.1"
                android:background="@color/white"
                android:divider="#C2C2C3"
                android:listSelector="@android:color/transparent" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="#D3D3D3" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#D3D3D3" />

            <com.common.view.listview.MyListView
                android:id="@+id/lv_juan_recieve"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="#C2C2C3"
                android:dividerHeight="@dimen/dp_0.1"
                android:listSelector="@android:color/transparent" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#D3D3D3" />
        </LinearLayout>
    </com.common.view.pulltorefresh.PullToRefreshScrollView>
</LinearLayout>