<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="上次保养时间"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14" />

            <TextView
                android:id="@+id/tv_pre_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:hint="2015-09-12"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_12"
                android:src="@drawable/icon_arrow_right_gray" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="上次保养里程（km）"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14" />

            <TextView
                android:id="@+id/tv_pre_licheng"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="当前里程（km）"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14" />

            <TextView
                android:id="@+id/tv_cur_licheng"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_expend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                layout="@layout/common_line_gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_remind_time"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12"
                    android:src="@drawable/icon_reminder_time" />

                <TextView
                    android:id="@+id/tv_remind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical|left"
                    android:hint="2015-09-12"
                    android:text="提醒时间：2015年09月12日"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12"
                    android:src="@drawable/icon_arrow_right_gray" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_needtime"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="您需要在2015年09月12日"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:id="@+id/tv_need_type"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:text="更换机油及清滤器"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />
            </LinearLayout>

            <include
                layout="@layout/common_line_gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:paddingTop="@dimen/dp_10"
                    android:text="温馨提示"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:text="如果以下项目在上个周期没有保养，请本次保养注意更换或检查"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_12" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dp"
                    android:background="#D3D3D3" />

                <com.common.view.listview.MyListView
                    android:id="@+id/lv_tip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#E5E2E4"
            >

            <TextView
                android:id="@+id/btn_continue_or_highmaintain"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/common_radius_green"
                android:gravity="center"
                android:text="继续"
                android:textColor="@color/white"
                android:textSize="@dimen/commen_text_size_16" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>