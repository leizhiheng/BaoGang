<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_business_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"
        android:text="上海市清浦区朱家角驰嘉店"
        android:textColor="@color/font_color"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        />
    <TextView
        android:id="@+id/tv_business_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:textColor="@color/grayfont"
        android:text="地址：上海市清浦区沈砖公路750号"
        android:textSize="@dimen/sp_14"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_business_tech"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/grayfont"
            android:text="技术水平：特级"/>
        <TextView
            android:id="@+id/tv_business_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_business_tech"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/grayfont"
            android:text="评价"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_business_tech"
            android:src="@drawable/start"
            android:layout_toRightOf="@+id/tv_business_comment"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_business_far"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:text="1000米"
            android:textColor="@color/exchange_text_color"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_business_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/tv_business_far"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:textColor="@color/exchange_text_color"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="76条评论"/>
    </RelativeLayout>

    
</LinearLayout>
