<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_10"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/grayfont"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/phoneIdentifyLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phoneIdentifyTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="left|center_vertical"
                android:text="您当前的手机号码：132****3691"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_check_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/btn_get_message"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/common_btn_blue_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_identity_way"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text="小提示\n您的手机绑定之后，即可享受手机登录、找回密码、消费提醒，让您的网上购物体验更安全更便捷。"
        android:textColor="@color/grayfont"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/next_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/common_btn_red_selector"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>