<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_80"
        android:layout_margin="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_healthy_hospital" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上海人民医院"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="眼科"
                android:textSize="@dimen/sp_13"
                android:padding="@dimen/dp_2"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn_bluelight_corner" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="骨科"
                android:textSize="@dimen/sp_13"
                android:padding="@dimen/dp_2"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn_bluelight_corner" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上海宝山区"
                android:singleLine="true"
				android:ellipsize="end"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/font_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_location_gray"
                android:text="1000米"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/font_gray"/>
        </LinearLayout>
    </LinearLayout>
    
    <View android:layout_width="@dimen/dp_0.5"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/gray"/>
    
    <ImageView android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_margin="@dimen/dp_15"
        android:src="@drawable/icon_phone"
        android:scaleType="centerInside"/>

</LinearLayout>