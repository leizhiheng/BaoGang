<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/smart_wifi_tips"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/state_tv_style"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/common_leftradius_gray"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/icon_close_white"
                android:scaleType="centerInside"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_success"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_27"
            android:src="@drawable/icon_circle_success_black"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/img_success"
            android:layout_marginTop="@dimen/dp_16"
            android:text="您的订单预约登记成功，\n请进入我的订单中查看审核进度!"/>
        <com.baosteel.qcsh.ui.view.DotView
            android:id="@+id/dotv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="@dimen/dp_28"/>
        <Button
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_40"
            android:text="确定"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:background="@drawable/shape_radius_red_full_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dotv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
    </RelativeLayout>
</LinearLayout>
