<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_shopitem_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/check_yes" />

        <LinearLayout
            android:id="@+id/layout_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/img_shopitem_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_shopitem_check"
                android:drawableLeft="@drawable/shop_test"
                android:gravity="center_vertical"
                android:text="七彩宝钢自营店"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_shop_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:src="@drawable/right_press" />
        </LinearLayout>

        
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    <!--
    <com.common.view.scrollview.NestScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.common.view.listview.MyListView
            android:id="@+id/lv_shopping_car_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:scrollbars="none"/>
    </com.common.view.scrollview.NestScrollView>
    -->

    <com.common.view.listview.MyListView
        android:id="@+id/lv_shopping_car_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />

</LinearLayout>