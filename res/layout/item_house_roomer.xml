<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_15" >

    <ImageView
        android:id="@+id/iv_house_review"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:scaleType="centerInside"
        android:src="@drawable/bg_maybelike" >
    </ImageView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_isTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_corner_red_4dp_frame"
            android:padding="@dimen/dp_3"
            android:text="置顶"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_13" >
        </TextView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_isTop"
            android:padding="@dimen/dp_3"
            android:text="求租一套带家具的2居室"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" >
        </TextView>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_isTop"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="华东理工周边"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_14" >
        </TextView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_address"
            android:padding="@dimen/dp_3"
            android:paddingTop="@dimen/dp_10"
            android:text="1600/月"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_16" >
        </TextView>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_address"
            android:layout_marginRight="@dimen/dp_20"
            android:text="个人房源"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_14" >
        </TextView>
    </RelativeLayout>

    <!-- <View
        android:layout_width="@dimen/dp_0.2"
        android:layout_height="match_parent"
        android:background="@color/gray" >
    </View>

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="15dp"
        android:src="@drawable/icon_phone" /> -->

</LinearLayout>