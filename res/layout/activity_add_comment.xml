<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.baosteel.qcsh.ui.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_order"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:padding="@dimen/dp_10"
                android:src="@drawable/test_pic2" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_order"
                android:text="奥克斯（AUX）ACL-2007大线圈匀火加热智能数码显示电磁炉"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toRightOf="@+id/img_order"
                android:text="型号："
                android:textColor="@color/gr_l_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toRightOf="@+id/tv4"
                android:text="GT101"
                android:textColor="@color/gr_l_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/img_order"
                android:text="价格："
                android:textColor="@color/gr_l_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv4"
                android:text="¥1129.00"
                android:textColor="@color/g_orage_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv4"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="X2"
                android:textColor="@color/gr_l_color"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_appraise_username"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="陈小明"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/mRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:clickable="false" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="2015-09-02 16:02:00"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_describ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="@dimen/dp_10"
            android:text="对于这次消费很满意，产品很好，而且服务人员态度也非常的不错，给5分哦！"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
        <GridView
            android:id="@+id/gv_imgs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/line" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/white"
        android:hint="再给师傅多说几句话吧!"
        android:textSize="@dimen/sp_13"
        android:gravity="top"
        android:padding="@dimen/dp_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100个字"
        android:gravity="right"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/gr_l_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <GridView
        android:id="@+id/gv_imgs_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/common_btn_orange_selector"
        android:text="提交评论"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />
</LinearLayout>
