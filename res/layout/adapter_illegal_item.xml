<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/icon_ticket_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="2015-07-08 15:30:01"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />
                <TextView
                    android:id="@+id/tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="立交桥"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commen_text_size_14" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_deal_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/common_leftradius_red"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="未处理"
                android:textColor="@color/white"
                android:textSize="@dimen/commen_text_size_14" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_describ"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_10"
            android:text="机动车违反规定停车、临时停车且驾驶人不在现场或者虽在现场但驾驶人拒绝立即驶离，妨碍其他车辆、行人通行的"
            android:textColor="#525252"
            android:maxLines="2"
            android:textSize="@dimen/commen_text_size_13" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text=""
            android:textColor="@color/black"
            android:singleLine="true"
            android:textSize="@dimen/commen_text_size_14" />
    </LinearLayout>
</LinearLayout>