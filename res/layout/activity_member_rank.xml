<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_common_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray6"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_120"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10" >

                <com.common.view.imageview.CircleImageView
                    android:id="@+id/my_rank_level_head"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/default_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/my_rank_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="当前等级："
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:id="@+id/my_rank_icon"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            android:src="@drawable/dengji_hong1" />
                        
                        <TextView
                            android:id="@+id/my_rank_levelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="红"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:textColor="@color/index_red"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_current_progree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="当前成长值：799"
                            android:textColor="@color/grayfont"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/growTipTv"
                            android:layout_width="0dp"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@drawable/com_black_arraw"
                            android:gravity="right|center_vertical"
                            android:text="成长值说明"
                            android:textColor="@color/grayfont"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <com.baosteel.qcsh.ui.view.SpringProgressView
                        android:id="@+id/my_rank_level_bar"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/my_rank_level_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="再累计201成长值到蓝"
                        android:textColor="@color/grayfont"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/gray"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#ffb6b6b6"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/my_rank_level_my_rank_level_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:text="普通会员权利及优惠:"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/my_rank_level_my_rank_level_discount_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="1、享受自营商品，满59元免运费服务。具体参考配送服务收费标准；\n......"
                    android:textColor="@color/exchange_text_color"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_27"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_arrow_down_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#ffb6b6b6"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:text="会员级别变动记录"
                    android:textSize="@dimen/sp_15" />

                <com.common.view.listview.MyListView
                    android:id="@+id/listview_rank_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="#ffb6b6b6"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#ffb6b6b6"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:text="会员级别图示:"
                    android:textSize="@dimen/sp_15" />

                <com.common.view.listview.MyListView
                    android:id="@+id/listview_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>