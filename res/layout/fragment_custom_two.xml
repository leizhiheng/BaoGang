<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:text="出游性质" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <GridView
        android:id="@+id/gv_custom"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:numColumns="4"
        android:padding="8dp"
        android:layout_height="150dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:text="你想玩什么（最多可以选择五项哦）" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <GridView
        android:id="@+id/gv_custom_"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:numColumns="4"
        android:padding="8dp"
        android:layout_height="150dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btn_travel_custom_last"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="上一步"
            android:textColor="@color/white"
            android:background="@drawable/gray_btn_style"/>

        <Button
            android:id="@+id/btn_travel_custom_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/travel_btn_style"/>
    </LinearLayout>

</LinearLayout>
