<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_8_white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/common_rightradius_red"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="热门优惠"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10" >

            <!-- 预约时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间:"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_service_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="2015-9-9 15:42:44"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <!-- 预约类型 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约类型:"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="水龙头维修"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <!-- 收费标准 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收费标准:"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_service_pricelevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="按实际情况收取费用"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>
            <!-- 备注 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备        注:"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_service_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="各地资费标准不同，具体情况请拨打10086进行咨询，谢谢！"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <!-- 故障相片 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障相片:"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_has_pictures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="无"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10" >

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/qcsh" />

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/qcsh" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

</LinearLayout>