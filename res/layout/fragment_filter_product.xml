<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/selector_list_item"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="筛选"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_15"
            android:text="确定"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.2"
        android:background="@color/gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="配送至"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/tv_select_position"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="深圳市宝安区"
                    android:textColor="@color/index_red"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="仅看有货"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
                
                <CheckBox
	                android:id="@+id/cb_has_product"
	                android:layout_width="@dimen/dp_42"
	                android:layout_height="@dimen/dp_24"
	                android:button="@null"
	                android:checked="false"
	                android:background="@drawable/checkbox_green_selector"/>
            </LinearLayout>
            
             <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="七彩生活自营"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
                
                <CheckBox
	                android:id="@+id/cb_qicai_sell"
	                android:layout_width="@dimen/dp_42"
	                android:layout_height="@dimen/dp_24"
	                android:button="@null"
	                android:checked="false"
	                android:background="@drawable/checkbox_green_selector"/>
            </LinearLayout>
            

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="折扣和服务"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/gray" />

            <com.common.view.other.GridViewInScrollView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/dp_10"
                android:numColumns="3"
                android:padding="@dimen/dp_10"
                android:verticalSpacing="@dimen/dp_10" />
            
                         <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="价格区间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
                
                <EditText 
                    android:id="@+id/et_price_start"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/shape_rect_frame_gray"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:inputType="number"
                    android:maxLength="9"
                    android:gravity="center"/>
                
                <View 
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/gray"/>
                
                <EditText 
                    android:id="@+id/et_price_end"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/shape_rect_frame_gray"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textSize="@dimen/sp_13"
                    android:inputType="number"
                    android:maxLength="9"
                    android:gravity="center"/>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/gray6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />


            <com.common.view.other.ListViewInScrollView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.1"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_gray_corner_frame"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_7"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_25"
                    android:paddingTop="@dimen/dp_7"
                    android:layout_margin="@dimen/dp_25"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14"
                    android:text="清除选项" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>