<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.baosteel.qcsh.ui.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.baosteel.qcsh.ui.view.TitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <fragment
                android:id="@+id/fragment_viewpager"
                android:name="com.baosteel.qcsh.ui.fragment.commen.PhotoViewPagerFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                class="com.baosteel.qcsh.ui.fragment.commen.PhotoViewPagerFragment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <TextView
                    android:id="@+id/tv_house_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="可逸兰亭3室一厅1卫91㎡"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10" >

                    <TextView
                        android:id="@+id/tv_house_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6000元/月（押二付一）"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_house_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家"
                        android:textSize="@dimen/sp_14" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_house_release_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="17小时前"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_house_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已有1235人浏览"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="厅室："
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_14" >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_house_room_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3室2厅1卫"
                            android:textSize="@dimen/sp_14" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="面积："
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_14" >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_house_room_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="91㎡"
                            android:textSize="@dimen/sp_14" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="概况："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_house_room_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通住宅、普通装修、南北朝向"
                        android:textSize="@dimen/sp_14" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="楼层："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_house_room_floor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3/6层"
                        android:textSize="@dimen/sp_14" >
                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.2"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_house_estate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可逸兰亭"
                        android:textSize="@dimen/sp_14" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_house_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="浦东人民广场12号"
                        android:textSize="@dimen/sp_14" >
                    </TextView>

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_location" >
                    </ImageView>

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_arrow_right" >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="房源描述"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_15" >
                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.2"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_house_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="1.黄金地段，黄金楼层\n2.三房非常干净，家电齐全，拎包入住，看房方便\n3.黄金地段，黄金楼层\n4.三房非常干净，家电齐全，拎包入住，看房方便"
                    android:textSize="@dimen/sp_14" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.baosteel.qcsh.ui.view.RadioGroupBar
        android:id="@+id/radio_group_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.baosteel.qcsh.ui.view.RadioGroupBar>

</LinearLayout>