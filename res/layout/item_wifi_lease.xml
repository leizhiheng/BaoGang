<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_wifi_product"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_70"
        android:scaleType="fitXY"
        android:src="@drawable/test_pic2"
        android:layout_margin="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_wifi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="日本旅行Wifi租赁"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:layout_toRightOf="@+id/img_wifi_product"/>
    <TextView
        android:id="@+id/tv_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:layout_alignBottom="@+id/img_wifi_product"
        android:layout_toRightOf="@+id/img_wifi_product"
        android:textSize="@dimen/sp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:textColor="@color/g_orage_color"
         />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_yuan"
        android:textColor="@color/g_orage_color"
        android:textSize="@dimen/sp_13"
        android:layout_alignBottom="@+id/img_wifi_product"
        android:text="258"/>
    <TextView
        android:id="@+id/tv_qi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_price"
        android:textColor="@color/gr_l_color"
        android:textSize="@dimen/sp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_alignBottom="@+id/tv_price"
        android:text="起"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月销售：1000份"
        android:textSize="@dimen/sp_14"
        android:layout_alignBottom="@+id/tv_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        />
</RelativeLayout>
