<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_common_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.common.view.pulltorefresh.PullToRefreshListView
            xmlns:pulltorefresh="http://schemas.android.com/apk/res/com.baosteel.qcsh"
            android:id="@+id/refresh_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
           	android:dividerPadding="0dp"
            pulltorefresh:ptrHeaderBackground="@color/gray7" />
    </LinearLayout>

</LinearLayout>