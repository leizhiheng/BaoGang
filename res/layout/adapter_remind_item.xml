<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.2"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="0.1"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/icon_brake_oil"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/commen_text_size_14"
            android:text="更换刹车油"
            />

        <TextView
            android:id="@+id/tv_remind_detailed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:maxLines="2"
            android:textColor="#525252"
            android:textSize="@dimen/commen_text_size_12"
            android:text="建议：2015.08更换\n2015.02/62500KM应更换"
            />
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_weight="0.1"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arrow_right_gray" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.1"
        android:layout_marginLeft="@dimen/dp_50"
        android:background="#D3D3D3" />

</LinearLayout>
