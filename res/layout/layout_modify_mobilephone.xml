<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/common_title_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@color/index_red" >

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/com_return"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxEms="10"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:text="修改手机号码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_mod_phone_step_1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerInside"
                android:src="@drawable/xiugaimima_step1_xuanzhong" />

            <ImageView
                android:id="@+id/left_icon_imageview"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/line_circle_gray" />

            <ImageView
                android:id="@+id/iv_mod_phone_step_2"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerInside"
                android:src="@drawable/xiugaimima_step2" />

            <ImageView
                android:id="@+id/right_icon_imageview"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/line_circle_gray" />

            <ImageView
                android:id="@+id/iv_mod_phone_step_3"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/xiugaimimia_step3" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_step_1"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:text="1.身份验证"
                android:textColor="@color/orange_red"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_step_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="2.修改登录密码"
                android:layout_centerInParent="true"
                android:textColor="@color/gray_pressed"
                android:textSize="@dimen/sp_14" />
            
             <TextView
                 android:id="@+id/tv_step_3"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="3.完成"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray_pressed"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#B5B5B5"
        android:textSize="@dimen/sp_14" />


    <FrameLayout
        android:id="@+id/fragment_container_mod_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>