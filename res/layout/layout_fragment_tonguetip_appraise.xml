<?xml version="1.0" encoding="utf-8"?>
<com.common.view.pulltorefresh.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_appraise"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/dp_10"
            android:text="宝贝评价（1000）"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#C8C8C8" />
        <com.common.view.listview.MyListView
            android:id="@+id/lv_appraise"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#C8C8C8"
            android:dividerHeight="@dimen/dp_0.1"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>
</com.common.view.pulltorefresh.PullToRefreshScrollView>