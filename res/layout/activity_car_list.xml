<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.common.view.topbar.HeadView
        android:id="@+id/headview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_46" />
    <EditText
        android:id="@+id/et_search_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/common_radius_white_withgraystrok"
        android:drawableLeft="@drawable/gray_search"
        android:drawablePadding="@dimen/dp_3"
        android:hint="寻找你喜欢的宝贝"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/gr_l_color" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line"/>
    <fragment
        android:id="@+id/fragment_product_category"
        android:name="com.baosteel.qcsh.ui.fragment.commen.ProductCategoryFragment"
        class="com.baosteel.qcsh.ui.fragment.commen.ProductCategoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
